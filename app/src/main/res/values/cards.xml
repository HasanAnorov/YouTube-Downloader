<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.App.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?colorSurface</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="cardElevation">0dp</item>
        <item name="contentPadding">0dp</item>
        <item name="android:outlineProvider">none</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App</item>
    </style>

    <style name="Widget.App.Card.Oval" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?colorSurface</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="cardElevation">0dp</item>
        <item name="contentPadding">0dp</item>
        <item name="android:outlineProvider">none</item>
        <item name="useCompatPadding">false</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.Oval</item>
    </style>

</resources>