<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.YouTubeDownloader" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_text_color</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorSurface">@color/white_av</item>
        <item name="colorSurfaceVariant">@color/white_min</item>


        <!-- Customize your theme here. -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowContentTransitions">true</item>

        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheet</item>
        <item name="errorTextColor">?colorError</item>

    </style>
    
    <style name="YouTubeDownloaderButton">
        <item name="android:background">@color/backgroundColor</item>
    </style>

    <style name="YouTubeDownloaderButton.Strong">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DrawerItemStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/custom_b</item>
    </style>

    <style name="NavigationItemNoRipple">
        <item name="android:colorControlHighlight">@android:color/transparent</item>
    </style>
    
</resources>