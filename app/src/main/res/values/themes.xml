<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YouTubeDownloader" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowContentTransitions">true</item>

    </style>
    
    <style name="YouTubeDownloaderButton">
        <item name="android:background">@color/backgroundColor</item>
    </style>
    
    <style name="YouTubeDownloaderButton.Strong">
        <item name="android:textStyle">bold</item>
    </style>


    <style name="DrawerItemStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/custom_b</item>
    </style>
    
</resources>